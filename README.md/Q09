#include<stdio.h>
int main()
{
	int size,i,j,k;
	printf("Enter the size of array\n");
	scanf("%d",&size);
	int a[size][size],b[size][size];
	for(i=0;i<=(size+1)/2;i++)
	{
		for(j=0;j<size-i;j++)
		{
			a[i][j]=k;
			k++;
		}
		if(k>(size*size))
		{
			break;
		}
		j-=1;
		while(j>=(size-i-1))
		{
			a[i][j]=k;
			k++;
			j++;
		}
		j++;
		i--;
		while(i>j)
		{
			a[i][j]=k;
	        k++;
	        i--;
		}
		i++;
		j=i;
	}
	for(i=0;i<=(size+1)/2;i++)
	{
		printf("\n");
		for(j=0;j<size-i;j++)
		{
			printf("%d",a[i][j]);
		}
    }
    k=size*size;
   	for(i=0;i<=(size+1)/2;i++)
	{
		for(j=size-1;j>=i;j++)
		{
			b[i][j]=k;
			k--;
			j--;
		}
		if(k==0)
		{
			break;
		}
		while(i<(size-j))
		{
			b[i][j]=k;
			k--;
			i++;
		}
		j++;
		i--;
		while(j<=i)
		{
			a[i][j]=k;
	        k--;
	        j++;
		}
		i--;
		j--;
		while(i>=(size-j))
		{
			b[i][j]=k;
			k--;
			i--;
		}
		i++;
		j--;
	}
	for(i=0;i<size;i++)
	{
		printf("\n");
		for(j=0;j<size;j++)
		{
			printf("%d\n",b[i][j]);
		}
	}
	return 0;
}
